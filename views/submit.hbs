
{{> navbar}}

<div class="narrow-page-container">

  <h2>Submit your video</h2>
  <hr>
  <form class="form-horizontal" method="post" action="/submit/video">
    <div class="form-group">
      <label for="kerberos" class="col-sm-2 control-label">Your Kerberos</label>
      <div class="col-sm-10">
        <input type="text" name="kerberos" class="form-control" id="kerberos" placeholder="Your kerberos" required>
      </div>
    </div>



    <div class="form-group">
      <label for="questionAnswered" class="col-sm-2 control-label">Question you're answering</label>
      <div class="col-sm-10">
        <select class="form-control" id="questionAnswered" name="questionAnswered" required>
          {{#each questions}}
            <option>{{this}}</option>
          {{/each}}
        </select>
      </div>
    </div>


    <div class="form-group">
      <label for="youtubeLink" class="col-sm-2 control-label">YouTube Link</label>
      <div class="col-sm-10">
        <input type="text" name="youtubeLink" class="form-control" id="youtubeLink" placeholder="Link to your YouTube video" required>
      </div>
    </div>

    <div class="form-group">
      <label for="newQuestion" class="col-sm-2 control-label">New Question</label>
      <div class="col-sm-10">
        <input type="text" name="newQuestion" class="form-control" id="newQuestion" placeholder="Question for the next person" required>
      </div>
    </div>      

